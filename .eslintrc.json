{
  "env": {
    "browser": true,
    "jasmine": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "globals": {
    "$": true,
    "_": true,
    "angular": true,
    "c3": true,
    "ClusterIcon": true,
    "compileTemplate": true,
    "d3": true,
    "fixture": true,
    "google": true,
    "Gmaps": true,
    "inject": true,
    "jQuery": true,
    "MAU": true,
    "module": true,
    "moment": true,
    "Spinner": true,
    "zxcvbn": true
  },
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "plugins": ["standard", "prettier"],
  "rules": {
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "prettier/prettier": 2
  },
  "extends": ["eslint:recommended", "prettier"]
}

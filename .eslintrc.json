{
  "env": {
    "browser": true,
    "jasmine": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "$": true,
    "angular": true,
    "google": true,
    "jQuery": true,
    "MAU": true,
    "module": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "plugins": [
    "standard",
    "simple-import-sort",
    "prettier",
    "unused-imports",
    "@typescript-eslint",
    "react-hooks"
  ],
  "rules": {
    "no-duplicate-imports": ["error", { "includeExports": true }],
    "unused-imports/no-unused-imports": "error",
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "prettier/prettier": 2,
    "import/no-unresolved": 0,
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  },
  "extends": [
    "eslint:recommended",
    "prettier",
    "plugin:import/errors",
    "plugin:import/warnings"
  ]
}

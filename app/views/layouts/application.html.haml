!!! 5
%html
  %head
    = render '/extra_html_head'
    = render '/title'
    = stylesheet_link_tag 'application'
    /[if lte IE 9]
      = stylesheet_link_tag 'mau-ie'
    /[if lte IE 7]
      = stylesheet_link_tag 'mau-ie7'

    %script{:type => 'text/javascript'}
      var authenticityToken  = encodeURIComponent('#{form_authenticity_token}')
      var MAU = window.MAU = window.MAU || {};
      = "MAU.versionString = '#{@revision}';"

  %body{class: [@browser_as_class, controller_name, action_name].join(" "), 'ng-app' => 'MauApp'}
    - unless browser.modern?
      = render '/old_browser_warning'
    = render '/noscript_msg'
    - if current_user.try(:is_special?)
      = render '/admin_header'
    .highlight
    .container

      .sidenav
        .sidenav__main
          %a{href: root_path, class: "brand"}
            %div{ class: 'sidebar-logo' }
          = render '/navigation'
          .push
        .sidenav__footer
          = render '/common/social_links'
          = render '/common/fine_print_links'

      .main-container.js-main-container
        = render '/flash_notice_error'
        = yield


    = render '/search_form_template'
  = render '/ganalytics'
  = render '/javascripts'
  = render '/footer_javascripts'
  = render "/common/feedback_form_templates"

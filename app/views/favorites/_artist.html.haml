-# expects artist
.artist-card{ class: %w(pure-u-1-1 pure-u-sm-1-2 pure-u-md-1-3 pure-u-lg-1-4 pure-u-xl-1-5).join(" ")}
  - if logged_in? && @favorites.is_current_user?
    .card__controls
      .artist-card__remove-favorite
        = link_to '#', title: "Remove Favorite", "fav-type" => "Artist", "fav-id" => artist.id, class: 'js-remove-favorite' do
          .fa.fa-icon.fa-close
  = link_to artist_path(artist) do
    - if artist.doing_open_studios?
      .os-violator{ title: 'Open Studios Participant!' }
    .image{style: "background-image: url(#{artist.representative_piece.get_path(:medium)});"}
    .desc
      .name
        = link_to artist.full_name, artist_path(artist)
      .media
        = [ artist.media.map { |m| link_to m.name, m } ].join(", ").html_safe


%table.tbl-content
  = render :partial => "/twocol_top"
  %tr
    %td.lcol{:colspan => 2}
      %h4 Refine Your Search
      - form_tag :class=>'power_search' do
        .block 
          %label{:for => 'by_medium'} By Medium
          = select_tag "medium_id", options_from_collection_for_select([OpenStruct.new(:id=>nil, :name => 'Any')] + Medium.all, 'id','name')
      
    %td.vstripe
    %td.rcol{:colspan => 2}
      = render :partial => '/flash_notice_error'
      .content-block
        %h4 Search Results - #{@user_query}
        #search_results
          - if @pieces.length <= 0
            .results-txt 
              We couldn't find anything that matched your search term 
              %em &quot;#{@user_query}&quot;
          - else
            .results-txt
              The following #{"artist" + (@pieces.length > 1 ? "s" : '')} matched your query
            .search-view-ctrls
              = render :partial => "/pagination"
            #thumbs_by_artist.search-results
              = render :partial => "thumbs", :locals => { :pieces => @pieces, :params => { :cols => 2, :art_link => true }}	
            .search-view-ctrls
              = render :partial => "/pagination"
  = render :partial => "/twocol_bottom"

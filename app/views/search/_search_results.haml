#search_results
  %h4 Search Results - #{@user_query}
  - if !@pieces || @pieces.length <= 0
    = render :partial => 'empty_search_results'
  - else
    - if @per_page_opts
      .result-count
        %form{:id => 'results_per_page'}
          %label Results Per Page
          = select_tag :per_page, options_for_select(@per_page_opts.map{|v| [v,v]}, @per_page)

    .results-txt
      We found #{@num_results} #{"piece" + (@num_results > 1 ? "s" : '')} that matched your query
    .search-view-ctrls
      = render :partial => "search_pagination"
    #thumbs_by_artist.search-results
      = render :partial => "thumbs", :locals => { :pieces => @pieces, :params => { :cols => 2, :art_link => true }}	
    .search-view-ctrls
      = render :partial => "search_pagination"

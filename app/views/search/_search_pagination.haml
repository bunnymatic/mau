- paginator ||= nil
- page = paginator.current_page.to_i
- pages = get_pages_for_pagination page, paginator.last_page + 1
- if paginator.last_page > paginator.first_page
  %ul.navlinks.paginator.js-search-paginator
    - if paginator.last_page > 0
      %li.page
        %a{:href => '#prev', 'data-page' => (page-1), :title => "previous"} < prev
    - pages.length.times do |idx|
      - pg = pages[idx]
      - if pages[idx] > 0 && ((pages[idx] - pages[idx-1]) > 1)
        %li.page ...
      %li.page{ class:(paginator.is_current_page?(pg) ? 'current': '')}
        %a{:href => "#%d" % pg, 'data-page' => pg}  #{pg+1}
    - if paginator.last_page > 0
      %li.page
        %a{:href => '#next', 'data-page' => (page+1), :title => "next"} next >


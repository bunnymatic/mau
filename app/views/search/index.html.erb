<h4>Search Results - <%=h @user_query %></h4>
<div id="search_results">
  <% if @pieces.length <= 0 -%>
  <div class="results-txt">
	We couldn't find anything that matched your search term &quot;<i><%=h @user_query %></i>&quot;.
  </div>
  <% else -%>
  <% noun = "artist"
     if @pieces.length > 1
        noun += "s"
     end
  -%>
  <div class="results-txt">The following <%= noun %> matched your query</div>
  <div class="search-view-ctrls">
    <%= render :partial => "/pagination" %>
  </div>
 <div id="thumbs_by_artist" class="search-results">
    <%= render :partial => 'thumbs', :locals => { :pieces => @pieces, :params => { :cols => 2, :art_link => true }} %>	
  </div>
  <% end -%>
  <div class="search-view-ctrls">
    <%= render :partial => "/pagination" %>
  </div>
</div>

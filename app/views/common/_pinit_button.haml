- url = request.url
- desc = [@art_piece.title, @art_piece.artist.get_name(true)].join(' by ')
- pic = @art_piece.get_path(:large, true)
- href = "//pinterest.com/pin/create/button/" + HTMLHelper.queryencode({:url => url, :description => desc, :media => pic })
%a{:class => 'pinit_art_piece', "data-pin-config" => "beside", :href => href.html_safe, "data-pin-do" => "buttonPin"}
  %img{:src => "//assets.pinterest.com/images/pidgets/pin_it_button.png"}
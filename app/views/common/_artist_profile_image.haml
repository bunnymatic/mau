.artist-profile__image
  - if logged_in? && artist && artist.login == self.current_user.login
    %a{:title => "update my picture", :href => add_profile_users_path}
      - if artist.has_profile_image
        %img{:class => "pure-img profile", :src => "%s?%s" % [artist.get_profile_image('medium'), Time.zone.now.to_i]}
      - else
        %i.fa.fa-user  
  - else
    - if artist.has_profile_image
      %img{:class => "pure-img profile", :src => "%s?%s" % [artist.get_profile_image('medium'), Time.zone.now.to_i]}
    - else
      %i.fa.fa-user  


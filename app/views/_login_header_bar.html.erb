<script type="text/javascript">
  var authenticityToken  = encodeURIComponent('<%= form_authenticity_token %>')
</script>
<% if logged_in? %>
<div id="logout">

  <% if current_user.is_editor? %>
  <%= render :partial => '/editor_header' %>
  <% end %>
  <% if current_user.is_admin? %>
  <%= render :partial => '/admin_header' %>
  <% end %>


  <%# spans go in reverse order because they all float right %>
  <span class="navitem last">
    <%= link_to "log out", logout_path, { :title => "Log out", :class => "lkdark" }  %> 
  </span>
  <span class="logout-nav navitem">hello, 
    <a class="lkdark" href="<%=h user_path(current_user) %>"><%=h current_user.login %></a>
  </span>
  <div class="clear"></div>
</div>
<% else %>
<div id="login_toplink"  ><%= link_to "log in",  login_path,  { :title => "log in", :class => "lkdark" } %> |
  <%= link_to "sign up", signup_path, { :title => "create an account", :class => "lkdark" } %>
</div>
<% end %>       

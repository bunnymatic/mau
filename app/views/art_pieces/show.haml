%ul.pure-g.tabs
  %li.pure-u-1-2.active
    %a{href: '#art', "data-toggle" => 'tab'} art
  %li.pure-u-1-2
    %a{href: '#about', "data-toggle" => 'tab'} about
.pure-g.tab-content
  .pure-u-1-1#art.tab-pane.active
    = render '/artists/art', artist: @art_piece.artist
  .pure-u-1-1#about.tab-pane
    = render '/artists/about', artist: @art_piece.artist

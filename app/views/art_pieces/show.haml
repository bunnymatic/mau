%ul.pure-g.js-tabs.tabs.tabs__horizontal
  %li.pure-u-1-2.active
    %a{href: '#art', "data-toggle" => 'tab'} #{@art_piece.artist.get_name}'s art
  %li.pure-u-1-2
    %a{href: '#about', "data-toggle" => 'tab'} about #{@art_piece.artist.get_name}
.pure-g.tab-content
  .pure-u-1-1#art.tab-pane.active
    .pure-g
      = render partial: '/artists/art', collection: @art_piece.artist.art_pieces, as: :art_piece
  .pure-u-1-1#about.tab-pane
    = render '/artists/about', artist: @art_piece.artist

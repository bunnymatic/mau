<script type="text/javascript">
  autocompleter = null;
  Event.observe(window, 'load', function() {
     $('tags').observe('focus', function() {
     var options={
       script: '<%= autosuggest_art_piece_tags_path(:format => 'json') %>?', // form elements tagged on the end
       varname:'input',
       valueSep: ',',
       json:true,
       minchars:2,
       shownoresults:false,
       maxresults:10,
       callback: null
     };
     autocompleter=new AutoComplete('tags', options);
     return true;
     });

  var otherinputs = $$('input');
  otherinputs.each( function(inp) {
  if (inp.readAttribute('id')!='tags') {
    inp.observe('focus', function() {
     if (autocompleter) { autocompleter.clearSuggestions(); }
    });
  }
});

  });

</script>
<%= javascript_include_tag 'thirdparty/autocomplete.min' %>

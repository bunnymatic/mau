.artist-info-block
  %h3
    = link_to artist.get_name, artist
  = link_to artist, :title => artist.get_name do
    - if artist.has_profile_image
      %img.pure-img.profile{:src => "%s?%s" % [artist.get_profile_image('small'), Time.zone.now.to_i]}
    - else
      %img.pure-img.profile{:src => "/images/default-profile-img-not-me.png"}
  .clear
  .studio
    - if artist.studio
      .name
        = link_to artist.studio.name, artist.studio
      .address
        #{artist.studio.street}
        - if artist.artist_info.studionumber.present?
          %span #{"#" + artist.artist_info.studionumber}
        - if !artist.address_hash.empty?
          = link_to artist.studio.map_link, title: :map do
            %i.fa.fa-map-marker
        .city #{artist.studio.city}
    - else
      .name #{IndependentStudio.new.name.singularize}
      .address
        #{artist.artist_info.street}
        - if !artist.address_hash.empty? && !artist.artist_info.street.blank?
          = link_to artist.map_link, title: :map do
            %i.fa.fa-map-marker
      .city #{artist.artist_info.city}

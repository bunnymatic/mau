<%= form_for user, :url => users_path do |f| %>
<input type="hidden" name="type" value="<%= type %>" />
<div class="signup-table" >
  <%= signup_form_row f, :login, :text_field, :display => 'Username', :placeholder => "choose a username", :required => true %>
  <%= signup_form_row f, :email, :email_field, :display => 'E-mail', :placeholder => "enter your email", :required => true %>
  <%= signup_form_row f, :password, :password_field %>
  <%= signup_form_row f, :password_confirmation, :password_field %>
  <%= signup_form_row f, :firstname, :text_field %>
  <%= signup_form_row f, :lastname, :text_field %>
  <% if type == 'Artist' %>
  <div class="row">
    <div class="label">
      <%= label_tag 'studio', 'Group Studio' %>
    </div>
    <div class="input">
      <%= select("artist","studio_id", [['None', 0]] + @studios.map{|u| [u.name,u.id]}) %>
    </div>
  </div>
  <div class="row">
    <div class="input-help">
      Choose "Independent studio" if you are not in a group studio. if you don't see your group studio, select "none" and
	    <a href="javascript:MAU.mailer('www','missionartistsunited.org','Please Add New Group Studio');">tell us</a> to add your studio.
    </div>
  </div>
  <% end %>
  <div class="row short">
    <%= recaptcha_tags :display => {:theme => 'blackglass'} %>
  </div>
  <div class="row short">
    <%= submit_tag 'Sign up', :class => 'formbutton' %>
  </div>
  <div class="row short last">
    Already a member? <%= link_to "Sign in",  login_path,  { :title => "Sign in" } %> here.
  </div>
</div>
<% end -%>

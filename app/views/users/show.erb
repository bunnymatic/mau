<table class="tbl-content" cellpadding="0" cellspacing="0">
  <%= render :partial => "/twocol_top" %>
  <tr>    
    <td> </td>
    <td class="alt-lcol" align="center">
      <% if current_user && @fan == current_user -%>
      <%= render :partial => "/users/sidebar_nav" %>
      <% end -%>
    </td>
    <td class="vstripe"><img class="page-height-spacer" src="/images/bg-5px.png"/></td>
    <td class="rcol" align="center" ><!-- artists/show -->
      <% if flash[:error] -%>
      <div class="error-msg">Error:
		<%= flash[:error] %>
      </div>
      <% end -%>
      <% if flash[:notice] -%>
      <div class="notice">
	<%= flash[:notice] %>      
      </div>
      <% end -%>
      <div class="content-block" > 
	<% if @fan -%>
	<div class="artist-profile">
	  <div class="info">
	    <div id="artist_profile_name">
              <% if @fan %>
 	      <h4><%=h @fan.get_name %></h4>
	      <% if @fan.url -%>
	      <div class="div-left">
    		<div id="u_website"><span>Website: </span>
		  <%= link_to @fan.url, add_http(@fan.url), { :target => "_blank" } %>
  		</div>
              </div>
              <% end -%>
 	      <div class="artist">
		<% if (!current_user || current_user.id != @fan.id) && (@fan.emailsettings['fromall'] || (@fan.emailsettings['fromartist'] && logged_in?)) -%>
		<div class="div-left share">Send the fan a note:&nbsp;
		  <a href="#" id="notify_artist" aid="<%= @fan.id %>" ><span  aid="<%= @fan.id %>"  class="micro-icon email"><% if @_ie7 -%><img src="/images/pix.gif" height="16" width="0"/><% end -%></span></a>
		</div>
		<% end -%>
		<%= render :partial => "/users/show_who_i_favorite", :locals => { :page_owner => @fan } %>
		<%= render :partial => "/users/show_who_favorites_me", :locals => { :page_owner => @fan } %>
              </div>
              <div class="clear"></div>
            </div>
            <% end -%>
	    <div id="artist_profile_img">
	      <% if logged_in? && @fan && @fan.login == self.current_user.login -%>
	      <a title="update my picture" href="/users/addprofile/">
		<% if @fan.has_profile_image -%>
  		<img class="profile" src="<%= @fan.get_profile_image('small') %>?t=<%= Time.now.to_i() %>" />
		<% else -%>
  		<img class="profile" src="/images/default-profile-img.jpg" width="200" />
  		<% end -%>
	      </a>
	      <% else -%>
	      <%  if @fan.has_profile_image -%>
  	      <img class="profile" src="<%= @fan.get_profile_image('small') %>" />
	      <%  else %>
  	      <img class="profile" src="/images/default-profile-img-not-me.jpg" width="200" />
  	      <%  end -%>
	      <% end -%>
	    </div>
	  </div>
	</div>
	<% end -%>
      </div>
    </td>
    <td valign="top">
    </td>
  </tr>
  <%= render :partial => "/twocol_bottom" %>
</table>


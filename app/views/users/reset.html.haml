= render :partial => '/flash_notice_error'
.pure-g
  .pure-u-1-1.password-reset
    %h3 Request for New Password
    .instructions Pick a new password for #{@user.login}
    = semantic_form_for :user do |f|
      = render "common/form_errors", :form => f
      = f.inputs do
        = f.input :password, required: true
        = f.input :password_confirmation, required: true, label: 'Confirm Password'
      = f.actions do
        = f.submit 'Reset Password', :class => 'pure-button pure-button-primary button-large'
    .input-help
      = link_to 'Do you need to activate your account?', resend_activation_users_path

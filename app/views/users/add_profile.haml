.pure-g
  .pure-u-1-1.header
    %h2.title Add/Update Profile Picture for #{current_user.get_name}
.pure-g
  .pure-u-1-1.pure-u-sm-1-2.arxt-piece-new-form.padded-content
    = semantic_form_for upload_profile_user_path(current_user), url: upload_profile_user_path(current_user), method: :post, html: { multipart: true } do |f|
      = hidden_field_tag :user_id, current_artist.login
      #spinner
      = render '/form_errors', form: f
      = render '/flash_notice_error'
      = f.inputs do
        %li.file.input.required
          %label.label{ for: 'upload_datafile' } Select File<abbr title="required">*</abbr>
          %input{ id: 'upload_datafile', name: 'upload[datafile]', type: :file }
          .help Your profile image should be a JPEG, GIF or PNG file and must not be more than 1MB.
      = f.actions do
        = f.submit 'Upload', class: 'pure-button button-large pure-button-primary'
        = f.submit 'Cancel', class: 'pure-button button-large'

<div class="logo-spacer"></div>
<div id="favorites_page">
  <% if flash[:error] -%>
  <div class="error-msg">Error:
    <%= flash[:error] %>
  </div>
  <% end -%>
  <% if flash[:notice] -%>
  <div class="notice">
    <%= flash[:notice] %>      
  </div>
  <% end -%>
  <% if current_user && current_user == @user -%>
  <h4>My Favorites</h4>
  <% else -%>
  <h4><%= @user.get_name true %>'s Favorites</h4>
  <% end -%>
  <div class="favorites">
    <div class="little-txt td-right navlinks"><!-- nav --></div>
    <% if current_user && (current_user == @user) && (@user.favorites.size <= 0) -%>
       <p class="no-favorites-msg">It looks like you don't have any favorites.  Look around the site.  You'll find this <span class="micro-icon heart"></span>.  All you need to do is click on the little heart and you'll immediately start adding artists and art pieces to your favorites.  Or try some of these pages...
       </p>
       <ul>
         <% @random_picks.each do |lnk, title| -%>
           <li><a href="<%= lnk %>"><%= title %></a></li>
         <% end -%>
       </ul>
    <% end -%>
    <h5>Art Pieces (<%= @user.fav_art_pieces.count %>)</h5>    
    <ul class="art_pieces">
      <% @user.fav_art_pieces.each do |f| %>
      <%= draw_small_favorite(f, {:is_owner => (current_user == @user)}); %>
      <% end -%>
    </ul>
    <div class="clear"></div>
    <h5>Artists (<%= @user.fav_artists.count %>)</h5>
    <ul class="artists">
      <% @user.fav_artists.each do |f| %>
      <%= draw_small_favorite(f, {:is_owner => (current_user == @user)}); %>
      <% end -%>
    </ul>
    <div class="clear"></div>
  </div>
  <div class="buttons">
    <form method="get" action="<%= user_path(@user) %>"><input class="formbutton" type="submit" value="Back to <%= @user.get_name true %>'s Page" name="submit">
    </form>
  </div>
</div>

<% if @user.errors && !@user.errors.empty? %>
<div class="logo-spacer"></div>
<div class="error-msg">
<div><%= flash[:error] %></div>
  <ul>
<% @user.errors.each do |k,v| %>
<li><%= k.to_s.humanize %> <%= v %></li>
<% end %>
</ul>
</div>
<% end -%>

<%= form_for :user do |f| -%>
<h4>Request for New Password</h4>
<table id="reset_pass" class="signup-table">
  <tr>
    <td colspan="2" >
      <div>Pick a new password for <%= @user.login %></div>
	</td>
  </tr>
  <tr>
    <td align="right"><label>New password:</label></td>
    <td><%= f.password_field :password %></td>
  </tr>
  <tr>
    <td align="right"><label>Confirm Password:</label></td>
    <td><%= f.password_field :password_confirmation %></td>
  </tr>
  <tr>
    <td></td>
    <td><%= submit_tag 'Reset' %></td>
  </tr>
</table>
<% end -%>

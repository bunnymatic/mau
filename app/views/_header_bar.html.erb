<a href="/"><img title="Mission Artists United" alt="Mission Artists United" src="<%= @logo_img %>" width="120" height="122" id="logo" /></a>
<div id="header_bar"><%#
  %><% if @_ie -%>
  <div class="ltcorner"></div>
  <div class="rtcorner"></div>
  <div class="lbcorner"></div>
  <div class="rbcorner"></div>
  <% end -%><div id="artisthemission"><img width="242" height="17" title="Art is the Mission" alt="Art is the Mission" src="/images/artisthimission4.gif"/></div><%#
   %><div id="search_btn2"><a class="lkdark" id="search_link" title="search the site" onclick="MAU.doSearch();" href="#"><img id="search_icon" title="search" src="/images/icons/searchicon24.png"/></a></div><%#
   %><div id="search_nav2"><form id="search_form" action="/search" method="get"><input id="search_box" class="srch" type="text" name="query" size="14"/></form></div>
   <div id="nav_bar">
     <div class="nav">
       <div>
	 <ul id="mymaunav" class="dropdown">
	   <% if logged_in? 
                navitems = []
                if current_artist 
	          navitems << "<a href='#{edit_artist_path(current_artist)}'>edit my page</a>"
	          navitems << "<a href='/art_pieces/new'>add art</a>"
	          navitems << "<a href='#{ arrangeart_artists_path }'>arrange art</a>"
	          navitems << "<a href='#{ deleteart_artists_path }'>delete art</a>"
	          navitems << "<a href='#{ favorites_user_path current_user }'><span class='heart'>&hearts;</span> my favorites</a>"
                  mypath = current_artist
                else
	          navitems << "<a href='#{edit_user_path(current_user) }'>edit my page</a>"
	          navitems << "<a href='#{favorites_user_path current_user}'><span class='heart'>&hearts;</span> my favorites</a>"
                  mypath = user_path(current_user)
                end
           -%>
	   <li class="dir"><%= link_to "my&nbsp;mau", mypath, { :class => "lknav" } %>
	     <ul>
               <%= HTMLHelper::print_list('leaf', navitems) %>
	     </ul>
	   </li>
	   <% else -%>
	   <li class="dir"><%= link_to "join in!", "/login", { :class => "lknav" } %></li>
	   <% end -%>
	 </ul>
       </div>
       <%	   [ ['resources','/resources/'],
  	           ['venues','/venues'],
  	           ['studios','/studios/'] ].each do |nm,lk,clz| -%>
       <div>
	 <ul class="dropdown <%= clz %>">
	   <li class="dir">
	     <a class="lknav" href="<%= lk %>" title="<%=h nm %>"><%=h nm %></a>
	   </li>
	 </ul>
       </div>
       <% end -%>
       <div >
	 <ul id="artistsnav" class="dropdown first">
	   <li class="dir">
	     <a class="lknav" href="<%= artists_path %>" title="artists">artists</a>
	     <ul>
               <% artistsnav = []
                  artistsnav << "<a href='#{artists_path}' title='artists by name'>artists by name</a>"
                  if Conf.oslive
                     artistsnav << "<a href='#{ artists_path(:osonly => 1) }' title='open studios artists'>open studios artists</a>"
                  end
                  artistsnav << "<a href='#{ artistsmap_path }' title='artists by map'>artists by map</a>"
		  artistsnav << "<a href='#{ media_path :m => 'a' }' title='artists by medium'>artists by medium</a>"
                  artistsnav << "<a href='#{ art_piece_tags_path :m => 'a' }' title='artists by tag'>artists by tag</a>"
                  if Conf.oslive
	 	     artistsnav << "<a href='#{ artistsmap_path(:osonly => 1) }' title='map of open studios artists'>open studios map</a>"
                     artistsnav << "<a href='/main/openstudios' title='what is open studios?'>open studios?</a>"
                  end
                -%>
                <%= HTMLHelper::print_list('leaf', artistsnav) %>
	     </ul>
	   </li>
	 </ul>
       </div>
     </div>
   </div>
</div>


%h1 Add/Edit an Artist Feed
= form_for(@feed) do |f|
  - if f.error_messages.present?
    .error-msg 
      = f.error_messages
  .clear
    .section
      .entry
        = f.label :url
        = f.text_field :url
        .help Should start with http://
      .entry
        = f.label :feed
        = f.text_field :feed
        .help Should start with http://
      .entry 
        = f.label :active
        = f.check_box :active
    .clear
    .samples
      %h4 Sample entries:
      %ul
        %li.odd
          .feed
            %code
              feed: http://flaxart.com/feed
          .url
            %code
              url: http://flaxart.com
        %li.even
          .feed
            %code
              feed: http://twitter.com/statuses/user_timeline/62131363.json
          .url          
            %code
              url: http://twitter.com/sfmau 
        %li.odd
          .feed 
            %code
              feed: http://studiomorin.blogspot.com/feeds/posts/default?alt=rss
          .url          
            %code
              url: http://studiomorin.blogspot.com/
    .clear
    = f.submit 'Submit'
    .clear

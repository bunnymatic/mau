<h1>New cms_document</h1>

<% form_for(@cms_document) do |f| %>
  <%= f.error_messages %>
  <div class="section">
    <div><%= f.label :page %> <%= f.text :page %></div>
    <div><%= f.label :section %> <%= f.text :section %></div>
  </div>

  <div class="markdown-ctrls">
    <span id="process_markdown_btn" class="formbutton">Show me &raquo;</span>
  </div>
  <div class="markdown-input">
    <%= f.textarea :article, :rows => 50, :cols => 50 %>
  </div>
  <div class="markdown-results">
    <div id="processed_markdown" class="markdown">
    </div>
  </div>
  <div class="clear">
    Find more about Markdown here [markdown basics](http://daringfireball.net/projects/markdown/basics)
    or on our <a href="/tests/markdown">markdown test page</a>.
  </div>
  
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', cms_documents_path %>

</div>

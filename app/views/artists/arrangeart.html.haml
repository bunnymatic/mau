#arrange_art
  .title 
    %h4 Arrange your art pieces
    #arrange_art_help
      = render :partial => '/whatsthis/popup', :locals => { :section => 'arrange_art', :link_text => "what\'s this?", :parent => 'arrange_art', :use_icon => true, :title => "About Arranging Art" } 
  = form_tag setarrangement_artists_path, :id => 'arrange_art_form' do
    %div
      = render :partial => '/art_pieces/thumbs', :locals => { :pieces => self.current_artist.art_pieces, :params => { :select => true, :show_footer => false, :cols => 5 }}
      .clear
      .help-txt Arrows shift image left and right. The top left image will be your Featured Image. Press SAVE when you're done. 
      .edit-buttons
        %input.formbutton{:type => 'submit', :value => 'save'}
        %input{:type => 'hidden', :name => 'artist', :value => self.current_artist.id}
        %input.formbutton{:type => 'button', :value => 'cancel', :onclick => "MAU.goToArtist(#{self.current_artist.id});"}

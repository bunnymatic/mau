<ul data-role="listview">
<% if @artists.empty? -%>
<%= render_as_mobile_list_item 'artists by first name', :link => 'artists_by_firstname' %>
<%= render_as_mobile_list_item 'artists by last name', :link => 'artists_by_lastname' %>
<%= render_as_mobile_list_item 'search', :link => 'search' %>
<% else -%>
<%   @artists.each do |a| -%>
  <%= render_as_mobile_list_item for_mobile_list(a), :link => artist_path(a) %>
<%   end -%>
<% end -%>
</ul>

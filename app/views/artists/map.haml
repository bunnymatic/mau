#map_page
  - if params[:format] != 'mobile'
    %div{:style => "margin: auto;" }
      = render :partial => '/osswitch', :locals => {:params => @inparams} 
      = render :partial => '/artists/view_switcher'
  .clear
  .map-container
    != GMap.header(:local_search => true)
    != @map.to_html
    != @map.div(:width => 600, :height => 500)
  .map-roster
    - @roster.each do |ky,v|
      .address-wrapper
        .map-addr
          = ky
        %ul.tenants
          - v.each do |a|
            %li.map-name
              %a.artist-map-lnk{ :id => "artist_#{a.id}", :href => artist_path(a)}
                =h a.get_name

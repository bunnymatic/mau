.pure-g
  .pure-u-1-1.padded-content.header
    %h2.title Manage Your Art
.pure-g
  .pure-u-1-1.padded-content
    %ul.js-tabs.tabs.tabs__horizontal
      %li.active
        %a{href: '#edit-art', "data-toggle" => 'tab'} edit/delete
      %li
        %a{href: '#arrange-art', "data-toggle" => 'tab'} arrange
      %li
        %a{href: '#delete-art', "data-toggle" => 'tab'} bulk delete
.pure-g.tab-content
  .pure-u-1-1#edit-art.tab-pane.active
    .pure-g
      .pure-u-1-1.help-txt.padded-content
        %p
          Click on the edit or delete button to edit or delete that piece.
      .pure-u-1-1.padded-content
        %ul
          = render partial: 'art', collection: @artist.art_pieces, as: :art_piece
  .pure-u-1-1#arrange-art.tab-pane
    .pure-g
      .pure-u-1-1.help-txt.padded-content
        %p
          Drag and Drop your art into the arrangement you'd like, then press SAVE when you're done.
        %p
          The top left image will be used to represent your art in search results.
      .pure-u-1-1.js-sortable.arrange.padded-content
        = form_tag setarrangement_artists_path, id: 'arrange_art_form' do
          %input{type: 'hidden', name: 'artist', value: @artist.id}
          %ul.js-sortable
            = render partial: '/art_pieces/arrange_thumb', collection: @artist.art_pieces, as: :art_piece
          .actions
            %input.pure-button.pure-button-primary{type: 'submit', value: 'save'}
            %input.pure-button{type: 'submit', value: 'cancel'}

  .pure-u-1-1#delete-art.tab-pane
    .pure-g
      .pure-u-1-1.help-txt.padded-content
        %p Check the "delete" checkbox for all the pieces you want to remove (permanently), and click the "Delete" button below.
      .pure-u-1-1.padded-content
        = form_tag "/artists/destroyart" do
          %input{ type: "hidden", name: "artist", value: @artist.id }
          #delete_art
            = render partial: '/art_pieces/delete_thumb', collection: @artist.art_pieces, as: :art_piece
          .actions
            %input.pure-button.pure-button-primary{ type: "submit",  value: "Delete Selected Images" }
            %input.pure-button{ type: "button", value: "Cancel", onclick: "MAU.goToArtist( #{@artist.id} );"}

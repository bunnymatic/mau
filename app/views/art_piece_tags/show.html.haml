%table.tbl-content
  = render :partial => '/twocol_top'
  %tr    
    %td.lcol{ :colspan => '2' }
      = render :partial => 'tag_list'
    %td.vstripe
    %td.rcol{ :colspan => '2'}
      %h4 
        Search for tag: 
        %span.query
          = @tag.name
      #search_results
        .search-view-ctrls
          = render :partial => "/pagination"
          = render :partial => "/art_pieces/mode_selector"
        = render :partial => '/flash_notice_error'
        .search-results
          - if @pieces and !@pieces.empty?
            = render :partial => '/search/thumbs', :locals => { :pieces => @pieces, :params => { :cols => 2, :show_footer => false, :size => 'thumb', :art_link => true }}
        .search-view-ctrls
          = render :partial => "/pagination"
  = render :partial => '/twocol_bottom'


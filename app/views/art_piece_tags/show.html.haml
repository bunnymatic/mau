.pure-g
  .pure-u-1-1.header.padded-content
    %h2.title
      Tag:
      %span.tag__name #{@tag.name}
  .pure-u-1-5.padded-content
    .pure-g
      .pure-u-1-1.header
        #tag_help.help-parent
          = render '/whatsthis/popup', :section => 'tags', :link_text => "what's this?", :parent => 'tag_help', :use_icon => true, :title => "About Popular Tags"
        %h4.title Tags
    .pure-g
      .pure-u-1-1.tagcloud
        %ul
          - @tag_cloud_presenter.tags_for_display.each do |tag|
            %li
              = tag
  .pure-u-4-5
    = render "/common/pagination", :paginator => @paginator
    .pure-g.search-results
      = render partial: '/artists/art', collection: @paginator.items, as: :art_piece


.admin-table.singlecolumn
  %h1 listing tags

  .controls
    = link_to 'New tag', new_art_piece_tag_path
    %a{:href => '/art_piece_tags/cleanup'} delete unused tags
  %table
    %tr
      %th ID
      %th Name
      %th Count
      - @tags.each_with_index do |tag, idx|
        - clz = (idx%2)==0 ? 'even':'odd'
        - clz << ' error-msg' if tag['count'] <= 0
        %tr{:class => clz}
          %td #{tag.id}
          %td #{tag.name}
          %td.input-name.ct #{tag['count']}
          %td.input-name
            = link_to 'Show', tag
          %td.input-name
            = link_to('Destroy', tag, :confirm => 'Are you sure?', :method => :delete)
  = link_to('New tag', new_art_piece_tag_path )


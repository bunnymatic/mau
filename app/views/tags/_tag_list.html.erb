      <h4>Popular Tags</h4>
      <div class="tagcloud">
	<% if @freq -%>
	<% @freq.each do |t| -%>
	<%   tid = t["tag"]
         tct = t["ct"]
	     (sz, mrg) = TagsHelper.fontsize_from_frequency(tct.to_i) 
	     tag = @tags.select{ |t| t.id.to_i == tid.to_i }[0]
	     if tag == @tag
                match_class = "tagmatch"
             else 
	        match_class = ""
	     end
         -%>
        <% if tag != nil -%>
	<span class="clouditem <%= match_class %>" style="font-size:<%= sz %>; margin: <%= mrg %>;"><%= link_to tag.safe_name, tag %></span>
	<% end -%>
	<% end -%>
	<% end -%>
      </div>

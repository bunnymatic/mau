<div class="admin-table">
<h1>Listing tags</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Count</th>
  </tr>

<% @tags.each do |tag| %>
<%   if tag['count'] <= 0
       clz = 'error-msg'
     else
       clz = ''
     end
-%>
  <tr class='<%= clz %>'>
    <td><%=h tag.name %></td>
    <td class='input-name'><%= tag['count'] %></td>
    <td class='input-name'><%= link_to 'Show', tag %></td>
    <td class='input-name'><%= link_to 'Edit', edit_tag_path(tag) %></td>
    <td class='input-name'><%= link_to 'Destroy', tag, :confirm => 'Are you sure?', :method => :delete %></td>

  </tr>
<% end %>
</table>

<br />

<%= link_to 'New tag', new_tag_path %>
</div>

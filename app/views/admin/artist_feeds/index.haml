.pure-g
  .pure-u-1-1.padded-content
    .artist_feeds
      %h1
        Artist Feeds
        .admin-table__controls
          = link_to new_admin_artist_feed_path, title: 'add feed' do
            = fa_icon('plus-circle')
  .pure-u-1-1.padded-content
    %table#artist_feeds_index.js-data-tables.pure-table.pure-table-striped
      %thead
        %tr
          %th.feed Feed URL
          %th.url Website (for link)
          %th.active Active?
          %th
      %tbody
        - @feeds.each_with_index do |feed, idx|
          %tr.feed_entry
            %td.feed
              %a{href: feed.feed} #{feed.feed}
            %td.url
              %a{href: feed.url} #{feed.url}
            %td.active
              = fa_icon('check') if feed.active
            %td.controls
              = link_to edit_admin_artist_feed_path(feed), title: 'edit' do
                = fa_icon('edit')
              = link_to [:admin, feed], title: 'remove', confirm: 'Are you sure?', method: :delete do
                = fa_icon('remove')

  .pure-u-1-1.padded-content
    .current_feed_content
      %h2 Current Feeds
    .feeds
      != @feed_html
    .controls
      %a{href: '/feeds/clear_cache', class: 'pure-button button-secondary'} Fetch New Feeds

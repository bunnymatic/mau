.pure-g
  .pure-u-1-1.pure-u-md-1-2.email_lists.padded-content
    %h2 Email List for : #{@email_list.display_title}
    .list_chooser
      %h3 Available Lists
      %ul
        - @email_list.lists.each do |listinfo|
          - key = listinfo[0]
          - name = listinfo[1]
          %li
            %a{href: 'emaillist?listname=%s' % key} #{name}
        %li.os_combos
          %a.js-os-combo-link{href: '#'} More OS Combos?
          #multi_form.js-multi-form
            = form_tag do
              - available_open_studios_keys.map(&:to_s).reverse.each do |ostag|
                .cb
                  %label.pure-checkbox{ for: ostag }
                    %input{id: ostag, type: 'checkbox', name: ostag}
                    #{OpenStudiosEvent.for_display(ostag)}

              %input.pure-button{type: 'submit', value: "Fetch Emails"}
  .pure-u-1-1.pure-u-md-1-2.email_lists.padded-content
    .email_results
      - if @email_list.emails.present?
        %a.export-csv.pure-button{href: "?format=csv&%s" % request.query_string}
          export as csv
        .admin-table        
          %h3 Emails
          %table.pure-table.pure-table-striped
            %thead
              %tr
                %th name
                %th email
            %tbody
              - @email_list.emails.each do |e|
                %tr
                  %td.name
                    = link_to e.name, e.link
                  %td.email #{e.email}
      - else
        %h4 No one matches that query

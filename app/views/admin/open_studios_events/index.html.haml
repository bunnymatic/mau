.admin-table
  %h1 Open Studios'

  .admin-controls
    = link_to new_admin_open_studios_event_path, title: 'add new open studios date' do
      = fa_icon "plus"
  %table
    %thead
      %tr
        %th key
        %th start date
        %th end date
        %th
    %tbody
      - @os_events.each_with_index do |os_event|
        - clz = cycle('even','odd')
        %tr{class: clz}
          %td.key #{os_event.key}
          %td.start #{os_event.start_date}
          %td.end #{os_event.end_date}
          %td.input-name
            = link_to os_event.edit_path, title: 'edit' do
              = fa_icon 'edit'
            = link_to os_event.destroy_path, confirm: 'Are you sure?', method: :delete, title: "Delete" do
              = fa_icon 'remove'


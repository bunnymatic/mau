.pure-g
  .pure-u-1-1.padded-content
    .admin-table
      %h1
        Art Piece Tags (#{@tags.count})
      .admin-table__controls
        %a{href: cleanup_admin_art_piece_tags_path, class: 'pure-button pure-xs-button button-warning'} delete unused tags
  .pure-u-1-1.padded-content
    %table.js-data-tables#tags_index.pure-table.pure-table-striped
      %thead
        %tr
          %th Name
          %th Count
          %th
      %tbody
        - @tags.each_with_index do |(tag, ct), idx|
          - clz = ' error-msg' if ct <= 0
          %tr{class: clz.to_s}
            %td
              = link_to tag.name, tag
            %td.input-name.ct #{ct}
            %td.admin-controls
              .remove.btn
                = link_to tag, confirm: 'Are you sure?', method: :delete, title: 'Remove' do
                  = fa_icon 'remove'

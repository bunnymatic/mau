%ul.artists-thumbs
  - @artists.each do |artist|
    :ruby
      next if artist.nil?
      piece = (artist.representative_piece ? artist.representative_piece.get_path('small') : artist.get_profile_image('small'))

    %li
      %a{:href => artist_path(artist)}
        .thumb{:style => "background-image:url(#{piece});"}
        .name #{artist.get_name}
      - if artist.doing_open_studios?
        .os-star

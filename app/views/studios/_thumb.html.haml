.studio-thumb
  .studio-img
    %a{:href => studio.studio_path, :title => studio.name}
      %img{:class => "studio-img", :src => studio.image(:thumb)}
  .studio-nfo
    .name
      %a{:href => studio.studio_path, :title => studio.name}
        #{studio.name}
    - if studio.indy?
      .address
        #{studio.street}
        %span{:class => "lkmap"}
          = link_to '(map)', studio.map_link, { :target => "_blank" }
    - if studio.has_artists?
      .populations
        .population
          = studio.artists_count_label
        .os_population
          = studio.open_studios_artists_count_label


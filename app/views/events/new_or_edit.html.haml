#event_edit
  %h1 Event
  - form_for(@event) do |f|
    = f.error_messages
    .clear
    .section
      .entry
        = f.label :title
        = f.text_field :title
      .entry
        = f.label :description
        = f.text_area :description
      .entry    
        = f.label :tweet
        = f.text_field :tweet
    .section
      - [:venue, :street, :city, :state, :zip].each do |txtfld|
        .entry
          = f.label txtfld
          = f.text_field txtfld
    .section   
      - [:starttime, :endtime].each do |dt|
        .entry
          = f.label dt
          = f.datetime_select dt
      - [:url].each do |txtfld|
        .entry
          = f.label txtfld
          = f.text_field txtfld
      .entry 
        = f.label :publish
        = f.check_box :publish
    .clear
      = f.submit 'Update'
    .links
      = link_to 'Show', @event 
      = "|"
      = link_to 'Back', events_path
    .clear

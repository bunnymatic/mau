%a{:href => '/'}
  %img#logo{:title => 'Mission Artists United', :alt => 'Mission Artists United', :src => @logo_img}
#header_bar
  #artisthemission
    %img{ :title => "Art is the Mission", :alt => "Art is the Mission", :src => "/images/artisthimission4.gif" }
  #search_btn2
    %a.lkdark#search_link{:title =>'search', :href => '#'}
      %img#search_icon{:title => 'search', :src => '/images/icons/searchicon24.png'}
  #search_nav2
    = form_tag '/search', :method => 'post', :id => 'search_form' do
      %input#search_box.srch{:type => 'text', :name => 'keywords', :size => '14'}
  #nav_bar
    .nav
      %ul#mymaunav.dropdown
        - if logged_in?
          :ruby
            navitems = []
            if current_artist
              navitems << link_to('edit my page', edit_artist_path(current_artist))
              navitems << link_to('add art', new_artist_art_piece_path(current_artist))
              navitems << link_to('arrange art', arrange_art_artists_path)
              navitems << link_to('delete art', delete_art_artists_path)
              navitems << link_to('plug your art show', new_event_path, :class => 'list_your_show_dropdown')

              navitems << link_to("<span class='heart'>&hearts;</span> my favorites</a>", favorites_user_path(current_user))
              navitems << link_to('resources', artist_resources_path, :title => 'artists\' resources')
              navitems << link_to('my qrcode', qrcode_artist_path(current_artist), :target => '_blank')
              mypath = current_artist
            else
              navitems << "<a href='#{edit_user_path(current_user) }'>edit my page</a>"
              navitems << "<a href='#{favorites_user_path current_user}'><span class='heart'>&hearts;</span> my favorites</a>"
              mypath = user_path(current_user)
            end
          %li.dir
            = link_to 'my&nbsp;mau'.html_safe, mypath, {:class => 'lknav'}
            %ul
              = print_html_list('leaf', navitems)
        - else
          %li.dir
            = link_to 'join in!', login_path, {:class => 'lknav'}

      -# in reverse order
      - [ ['events','/events/'] ].each do |nm,lk,clz|
        %ul.dropdown{:class => clz}
          %li.dir
            %a.lknav{:href => lk, :title => nm} #{nm}
      %ul.dropdown#studionav
        %li.dir
          %a.lknav{:href => studios_path} spaces
          %ul
            :ruby
              studionav = []
              studionav << "<a title='group studios' href='#{studios_path}'>group studios</a>"
              studionav << "<a title='independent studios' href='#{studio_path(0)}'>independent studios</a>"
              studionav << "<a title='venues' href='#{venues_path}'>venues</a>"
            = print_html_list('leaf', studionav)

      %ul.dropdown#osnav
        %li.dir
          %a.lknav{:href => open_studios_path} open studios
          %ul
            :ruby
              osnav = []
              if Conf.oslive
                osnav << "<a href='#{ open_studios_path }' title='open studios event'>event details</a>"
                osnav << "<a href='#{ artists_path(:osonly => 1) }' title='particpating artists'>participating artists</a>"
                osnav << "<a href='#{ map_artists_path(:osonly => 1) }' title='map of open studios artists'>os map</a>"
                if current_user
                  signup_path = edit_artist_path(current_user) + "#events"
                else
                  signup_path = login_path
                end
                osnav << "<a href='#{signup_path}'>artist sign up</a>"
                osnav << "<a href='#{ artist_resources_path }' title='artists resources'>artist resources</a>"
              end
            = print_html_list('leaf', osnav)
      %ul#artistsnav.dropdown.first
        %li.dir
          %a.lknav{:href => artists_path, :title => 'artists'} artists
          %ul
            :ruby
              artistsnav = []
              artistsnav << "<a href='#{artists_path}' title='artists by name'>artists by name</a>"
              artistsnav << "<a href='#{ map_artists_path }' title='artists by map'>artists by map</a>"
              artistsnav << "<a href='#{ media_path :m => 'a' }' title='artists by medium'>artists by medium</a>"
              artistsnav << "<a href='#{ art_piece_tags_path :m => 'a' }' title='artists by tag'>artists by tag</a>"
            = print_html_list('leaf', artistsnav)

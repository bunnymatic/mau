<%= form_tag "/flaxart/submit" %>
<div class="flax-chooser small flax">
  <div class="logo-spacer">&nbsp;</div>
  <h4>Spring Open Studios Directory Show at Flax</h4>
  <span class="breadcrumbs">
    <div>
      <span>Choose Art &raquo;</span>
      <span class="current">Verify Art &raquo;</span>
      <span>Submit Payment &raquo;</span>
      <span>Success</span>
    </div>
  </span>
  <div class="container">
    <ul>
      <% @art_pieces.each do |ap|
          xclass = ''
          if ap.id == @art_pieces.last.id
             xclass = ' last ' 
          end
      -%>
      <%= draw_chooser_item ap, :class => xclass, :checkboxes => false, :size => 'small' %>
      <% end -%>
    </ul>
    <div class="clear"></div>
  </div>
  <div class="edit-buttons">
    <input type="submit" value="Yep! These are the ones"/>
    <input class="cancel" type="submit" value="Whoa! These aren't right"/>
  </div>
</div>
</form>

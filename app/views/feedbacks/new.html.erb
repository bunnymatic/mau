<table class="popup-help">
  <tr>
	<td class="popup-help-title"><%= @title %></td>
  </tr>
</table>
<div class="popup-help-text">
  <% form_for :feedback, @feedback, :url => feedback_path, :html => {:id => "feedback_form"} do |f| -%>
  <table class="fdbk-form">
	<tr>
	  <td colspan="2">
		Click on one of the following feedback options (on the left) and send us a note.
		If you include a valid email,  we'll get back to you as soon as we can.
	<% unless @error_message.blank? -%>
	<div class="error-msg" colspan="2">
		<%=h @error_message %>
	</div>
	<% end -%>
	  </td>
	</tr>
	<tr>
	  <td class="fdbk-selector">
		<%= feedback_subjects %>
	  </td>
	  <td class="fdbk-form-container">
		<div id="info_text"></div>
		<div id="email_input" class="fdbk-input" style="display:none;">
		  <%= f.label 'email' %><br/>
		  <%= f.text_field 'email' %>
		</div>
		<div id="url_input" class="fdbk-input" style="display:none;">
		  <%= f.label 'Web Address' %><br/>
		  <%= f.text_field 'url' %>
		</div>
		<div id="skills_input" class="fdbk-input" style="display:none;">
		  <%= f.label 'Skills' %><br/>
		  <%= f.select 'skillsets', feedback_skillsets , :multiple => true %>
		</div>
		<div id="bug_input" class="fdbk-input" style="display:none;">
		  <%= f.select 'bugtype', feedback_bugtypes %>
		</div>
		<div id="comment_input" class="fdbk-input" style="display:none;">
		  <%= f.text_area 'comment', :rows => 8, :cols => 40 %>
		</div>
		<div id="send_input" style="display:none;">
		  <%= f.submit 'Send' %>
		  <button class='formbutton' id="feedback_close_btn">Cancel</button>
		</div>

	  </td>
	  <%= f.hidden_field 'subject', :value => @section %>
	  <%= f.hidden_field 'page', :value => request.referer %>
	  <% if current_artist -%>
	  <%= f.hidden_field 'login', :value => current_artist.login %>
	  <%= f.hidden_field 'email', :value => current_artist.email %>
	  <% end -%>
	  </td>
	</tr>
  </table>
  <% end -%>
</div>
<% if !logged_in? -%>
<div class="feedback-signup-msg">Are you an artist working in the Mission District of San Francisco? <%= link_to "Sign up!", "/artists/new" %></div>
<% end -%>


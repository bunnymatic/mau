{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@js/*": ["app/webpack/js/*"],
      "@reactjs/*": ["app/webpack/reactjs/*"],
      "@models/*": ["app/webpack/js/app/models/*"],
      "@services/*": ["app/webpack/js/services/*"],
      "@test/*": ["app/webpack/test/*"],
      "@fixtures/*": ["spec/fixtures/*"]
    }
  },
  "exclude": [
    "vite.config.ts",
    "**/*.spec.js*",
    "**/*.test.js*",
    "**/*.spec.ts*",
    "**/*.test.ts*",
    "**/*.po.tsx",
    "app/webpack/test/*",
    "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": false
}

{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types", "node_modules/@testing-library"],
    "types": ["node", "jest-dom"],
    "paths": {
      "@js/*": ["app/webpack/js/*"],
      "@reactjs/*": ["app/webpack/reactjs/*"],
      "@models/*": ["app/webpack/js/app/models/*"],
      "@services/*": ["app/webpack/js/services/*"],
      "@test/*": ["app/webpack/test/*"],
      "@fixtures/*": ["spec/fixtures/*"]
    }
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": false
}

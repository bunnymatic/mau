{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@js/*": ["./app/webpack/js/*"],
      "@reactjs/*": ["./app/webpack/reactjs/*"],
      "@models/*": ["./app/webpack/js/app/models/*"],
      "@services/*": ["./app/webpack/js/services/*"],
      "@test/*": ["./app/webpack/test/*"],
      "@fixtures/*": ["./spec/fixtures/*"]
    },
    "types": ["node", "jest-dom"],
    "typeRoots": ["node_modules/@types", "node_modules/@testing-library"]
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": false
}
